.nav-left
  width 180px /* sk: 180->200 not used */
  height 100%
  /* background #2A2935 */
  background white
  /* box-shadow inset -15px 0 15px -15px #222 */
  box-shadow inset -15px 0 1px -15px #222
  float left
  position relative
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  -o-user-select none
  user-select none
  .avatar
    width 100px
    height 100px
    margin 55px auto 15px
    border-radius 50%
    box-shadow 0 0 0 2px green, 0 0 2px 2px #eee
    background-repeat no-repeat
    background-size 100px 100px
    display block
    &:hover
      -webkit-animation rubberBand 1s
      animation rubberBand 1s
  .author
    text-align center
    height 27px
    /* color white */
    color green
  .more-menus
    display: none
  .icon
    text-align center
    margin 0 auto 5px
    a
      /* color white */
      color black
      line-height 19px
      &:hover
        color #309e85
      background #000000 /* sk */

  ul
    margin 0
    padding 0
    font-size 15px /* 17->15 */
    font-weight bold /* sk */
    /* border-top 1px solid #fff */
    border-top 1px solid #aaa
    list-style none
    overflow-y auto
    &.sub
      transition height .3s, border-top .3s
      /* border-left: solid 2px red; */
      border-left: solid 0px #aaa;
      overflow-y hidden
      text-align left /* sk */
      padding 0 1px /* sk */
      &.hide
        height 0 !important
        border-top hidden
      li
        line-height 25px
        font-size 14px
        text-align left /* sk */
        padding-left 10px /* sk */
        &:last-child
          border-bottom hidden
        &>div
          height 25px
    li
      line-height 40px
      text-align left /* sk */
      padding-left 10px /* sk */
      /* text-align center */
      /* border-bottom 1px solid #fff */
      border-bottom 1px solid #aaa
      cursor pointer
      &>div
        height 40px
        /* color rgba(255,255,255,0.7) */
        color black
        transition all .15s linear
        position relative
        white-space nowrap
        overflow hidden
        &:hover
          /* color #f7f7f7 */
          color #800000
          box-shadow inset 6px 0 0.09px #fff
        &.active
          /* color #020202 */
          color #800000
          background-color: #EBF495
          /* box-shadow inset 165px 0 0.09px #fff */
        &>.fold
          /* left: 4px */
          text-align left
          padding-left 1px
          font-size 0.6em
          /*position: absolute*/
          transition transform .3s
          &.unfold
            transform: rotate(90deg)


  .left-bottom
    position absolute
    display table
    border-collapse collapse
    bottom 0
    width 100%
    font-size 0
    /* color rgba(255,255,255,0.7) */
    color green
    a
      font-size 17px
      display table-cell
      height 30px
      text-align center
      vertical-align middle
      border-top 1px solid #aaa /* fff->aaa */
      width 100%
      line-height 30px
      &.about
        display: inline-block
        &.hasFriend
          border-right 1px solid #fff
          width calc(49% - 1px)
      &.friends
        display: inline-block
      &.dynamic-menu
        display block
